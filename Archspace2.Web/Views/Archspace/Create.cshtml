@using Archspace2;
@{
    ViewData["Title"] = "Create Character";
    Layout = "_LayoutGame";
}

<main>
    <div>
        <form method="post" action="@(Url.Action("Create", "Player"))">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="New Character Name" value="">
                @foreach (Race race in Game.Configuration.Races)
                {
                <div class="radio"><label><input type="radio" name="race" value="@(race.Id)" /></label><img src="~/images/races/@(race.Name.ToLowerInvariant())/create.gif" /></div>
                }
                <button type="submit" class="btn btn-default">Create</button>
            </div>
        </form>
    </div>
</main>

